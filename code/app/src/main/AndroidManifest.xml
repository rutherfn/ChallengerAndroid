<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicholasrutherford.challengerandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/placeholderimage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/placeholderimage"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.accounts.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.MainActivity"></activity>
        <activity android:name=".activitys.challenges.AddAChallengeActivity"></activity>
        <activity android:name=".activitys.challenges.EditOrDeleteChallengeActivity"></activity>
        <activity android:name=".activitys.challenges.ChallengesActivity"></activity>
    </application>

</manifest>